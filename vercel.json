{
  "version": 2,
  "name": "stratford-ai",
  "alias": ["stratford-ai"],
  "regions": ["iad1"],
  "build": {
    "env": {
      "NODE_ENV": "production",
      "STRATFORD_RANDOM_SEED": "42",
      "STRATFORD_VERSION": "1.0.0",
      "NEXT_TELEMETRY_DISABLED": "1"
    }
  },
  "env": {
    "NODE_ENV": "production",
    "STRATFORD_RANDOM_SEED": "42",
    "STRATFORD_VERSION": "1.0.0",
    "LOG_LEVEL": "warn",
    "ENABLE_MOCK_DATA": "false",
    "CACHE_DURATION_MINUTES": "1440"
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "origin-when-cross-origin"
        },
        {
          "key": "X-DNS-Prefetch-Control",
          "value": "on"
        },
        {
          "key": "Strict-Transport-Security",
          "value": "max-age=31536000; includeSubDomains"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    },
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600, s-maxage=3600"
        }
      ]
    },
    {
      "source": "/_next/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/dashboard",
      "destination": "/",
      "permanent": true
    }
  ],
  "rewrites": [
    {
      "source": "/health",
      "destination": "/api/health"
    }
  ],
  "functions": {
    "src/app/api/**/*.ts": {
      "maxDuration": 30
    },
    "src/pages/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "crons": [
    {
      "path": "/api/cron/cleanup",
      "schedule": "0 2 * * *"
    }
  ]
}