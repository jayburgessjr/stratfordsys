# =============================================================================
# Stratford AI Wealth Engine - Environment Configuration
# =============================================================================

# Application
NODE_ENV=development
APP_VERSION=1.0.0
APP_URL=http://localhost:3000

# =============================================================================
# Database Configuration
# =============================================================================

# PostgreSQL (Primary Database)
DATABASE_URL="postgresql://stratford_user:your_password@localhost:5432/stratford_dev"

# Redis (Cache & Sessions)
REDIS_URL="redis://localhost:6379"

# MongoDB (Document Storage - Optional)
MONGODB_URL="mongodb://localhost:27017/stratford_dev"

# TimescaleDB (Time Series Data - Uses PostgreSQL connection)
TIMESCALE_ENABLED=true

# =============================================================================
# Authentication & Security
# =============================================================================

# NextAuth.js Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET="your-32-character-nextauth-secret-key"

# JWT Configuration
JWT_SECRET="your-jwt-secret-key"
JWT_EXPIRES_IN="1h"

# Encryption Master Key (32 characters)
ENCRYPTION_MASTER_KEY="your-32-character-encryption-master-key"

# OAuth Providers (Optional)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

GITHUB_ID="your-github-client-id"
GITHUB_SECRET="your-github-client-secret"

# =============================================================================
# External API Keys
# =============================================================================

# Market Data Providers
ALPHA_VANTAGE_API_KEY="your-alpha-vantage-api-key"
POLYGON_API_KEY="your-polygon-api-key"
IEX_CLOUD_API_KEY="your-iex-cloud-api-key"

# =============================================================================
# Monitoring & Observability
# =============================================================================

# Application Performance Monitoring
DATADOG_API_KEY="your-datadog-api-key"
DATADOG_APP_KEY="your-datadog-app-key"

# Error Tracking
SENTRY_DSN="your-sentry-dsn"
SENTRY_ENVIRONMENT=development

# New Relic (Alternative APM)
NEW_RELIC_LICENSE_KEY="your-new-relic-license-key"
NEW_RELIC_APP_NAME="Stratford AI Wealth Engine"

# =============================================================================
# Email & Notifications
# =============================================================================

# SMTP Configuration
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# SendGrid (Alternative)
SENDGRID_API_KEY="your-sendgrid-api-key"

# Twilio (SMS Notifications)
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="your-twilio-phone-number"

# =============================================================================
# Cloud Storage
# =============================================================================

# AWS S3 (Document Storage)
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="stratford-documents"

# =============================================================================
# Compliance & Regulatory
# =============================================================================

# KYC/AML Service Providers
JUMIO_API_TOKEN="your-jumio-api-token"
JUMIO_API_SECRET="your-jumio-api-secret"

ONFIDO_API_TOKEN="your-onfido-api-token"

# Regulatory Reporting
FINRA_CRD_NUMBER="your-finra-crd-number"
SEC_CIK_NUMBER="your-sec-cik-number"

# =============================================================================
# Feature Flags
# =============================================================================

# Trading Features
ENABLE_LIVE_TRADING=false
ENABLE_OPTIONS_TRADING=false
ENABLE_CRYPTO_TRADING=false

# AI/ML Features
ENABLE_AI_SIGNALS=true
ENABLE_SENTIMENT_ANALYSIS=true

# Compliance Features
ENABLE_REAL_TIME_MONITORING=true
ENABLE_AUTOMATED_REPORTING=true

# =============================================================================
# Rate Limiting Configuration
# =============================================================================

# API Rate Limits (requests per minute)
RATE_LIMIT_API=100
RATE_LIMIT_AUTH=5
RATE_LIMIT_TRADING=10
RATE_LIMIT_PUBLIC=1000

# =============================================================================
# Development & Testing
# =============================================================================

# Logging
LOG_LEVEL=info
ENABLE_QUERY_LOGGING=false

# Testing
TEST_DATABASE_URL="postgresql://stratford_user:your_password@localhost:5432/stratford_test"
ENABLE_TEST_DATA=true
DETERMINISTIC_SEED=42

# Development Tools
ENABLE_API_DOCS=true
ENABLE_PRISMA_STUDIO=true

# =============================================================================
# Production-Specific Configuration
# =============================================================================

# SSL/TLS
SSL_CERT_PATH="/path/to/ssl/cert.pem"
SSL_KEY_PATH="/path/to/ssl/key.pem"

# CDN
CDN_URL="https://cdn.stratford.ai"

# Load Balancer
HEALTH_CHECK_PATH="/api/health"

# Session Store
SESSION_STORE="redis"
SESSION_SECRET="your-session-secret-key"

# CORS
CORS_ORIGIN="https://app.stratford.ai,https://admin.stratford.ai"

# =============================================================================
# Security Headers
# =============================================================================

# Content Security Policy
CSP_ENABLED=true
CSP_REPORT_ONLY=false

# HSTS
HSTS_MAX_AGE=31536000
HSTS_INCLUDE_SUBDOMAINS=true

# =============================================================================
# Backup & Disaster Recovery
# =============================================================================

# Database Backups
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# File Backups
FILE_BACKUP_ENABLED=true
FILE_BACKUP_LOCATION="s3://stratford-backups"

# =============================================================================
# Analytics & Business Intelligence
# =============================================================================

# Google Analytics
GA_TRACKING_ID="your-ga-tracking-id"

# Mixpanel
MIXPANEL_TOKEN="your-mixpanel-token"

# =============================================================================
# Webhook Configuration
# =============================================================================

# External Webhooks
WEBHOOK_SECRET="your-webhook-secret"
WEBHOOK_TIMEOUT=30000

# Internal Event Processing
EVENT_QUEUE_ENABLED=true
EVENT_PROCESSING_BATCH_SIZE=100